<!DOCTYPE html>
<html lang="{{ lang }}">
  <head>
    {% include "head.njk" %}
  </head>

  <body>
    <div class="page">
      {#
  Use Every Layout's sidebar layout:
  https://absolutely.every-layout.dev/layouts/sidebar/
  #}
      <div class="with-sidebar">
        <div>
          <div class="sidebar">

            <header role="banner" class="cluster">
              <div>
                <div class="sitelogo-parent">
                  {% if page.url == '/' %}
                    <h1 class="sitelogo">{{ pkg.title }}</h1>
                  {% else %}
                    <p class="sitelogo">
                      <a href="/">{{ pkg.title }}</a>
                    </p>
                  {% endif %}
                </div>
                <div>
                  {% include "components/navigation.njk" %}
                </div>
              </div>
            </header>

          </div>
          <div class="not-sidebar">
            <main role="main">
              {% block content %}
                {{ content | safe }}
              {% endblock %}
            </main>
          </div>
        </div>
      </div>
      {% include "components/footer.njk" %}
    </div>

		{%- if eleventy.env.runMode === "serve" %}
			{# External CSS file (local dev live reload will refresh without page reload) #}
			<link rel="stylesheet" href="{% getBundleFileUrl "css", "additional" %}">
		{%- else  %}
			{# Inlined CSS (fastest site performance in production) #}
			<style>{% getBundle "css", "additional" %}</style>
		{%- endif %}
		<script type="module" src="{% getBundleFileUrl "js", "additional" %}"></script>

		{%- css "additional" %}{% renderFile "src/assets/sass/additional.scss" %}{% endcss %}
		{%- js "additional" %}{% renderFile "src/assets/js/additional.js" %}{% endjs %}
  </body>

</html>
